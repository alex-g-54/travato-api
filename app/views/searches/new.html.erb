<h1>Search for an Itinerary</h1>

<%= form_for @search do |f| %>
  <p>
    <%= f.label :city %>
    <%= f.text_field :city %>
  </p>

  <p>
    <%= f.label :arrival_date %>
    <%= f.date_field Date.today, :arrival_date %>
  </p>

  <p>
    <%= f.label :departure_date %>
    <%= f.date_field Date.tomorrow, :departure_date %>
  </p>

  <p>
    <%= f.submit 'Search' %>
  </p>
<% end %>
