<h1>Welcome to Travato!</h1>

<h2>Search</h2>

<%= form_tag itineraries_search_path, method: :get do %>
  <p>
    <%= label_tag(:city, "City:") %>
    <%= text_field_tag :city, params[:city]%>
  </p>

  <p>
    <%= label_tag(:arrival_date, "Arrival Date:") %>
    <%= select_date Date.today, prefix: :arrival_date %>
  </p>

  <p>
    <%= label_tag(:departure_date, "Departure Date:") %>
    <%= select_date Date.tomorrow, prefix: :departure_date %>
  </p>

  <%= submit_tag "Search", name: nil %></p>
<% end %>
